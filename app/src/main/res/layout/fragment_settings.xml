<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server base URL"
                android:textAllCaps="true"
                android:textColor="@color/heading" />

            <EditText
                android:id="@+id/ip_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_content"
                android:hint="http://localhost:21465/api/"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:text="Server base Socket.IO"
                android:textAllCaps="true"
                android:textColor="@color/heading" />

            <EditText
                android:id="@+id/ip_base_socketio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_content"
                android:hint="http://localhost:21465/"
                android:padding="10dp"
                android:textColor="#000"
                android:textColorHint="#999" />

            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/purple_button"
                android:text="Salvar"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Sair da conta"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>